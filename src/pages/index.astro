---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home">
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Mulish:wght@200;300;400&display=swap"
    rel="stylesheet"
  />

  <style>
    .hero-title {
      font-family:
        "Mulish",
        -apple-system,
        BlinkMacSystemFont,
        "Segoe UI",
        Roboto,
        sans-serif;
      font-weight: 200;
      letter-spacing: 0.05em;
    }
  </style>

  <div
    class="relative w-full"
    style="margin-left: calc(-50vw + 50%); margin-right: calc(-50vw + 50%); width: 100vw;"
  >
    <!-- Hero Video -->
    <div class="relative w-full h-[80vh]">
      <video
        autoplay
        loop
        muted
        playsinline
        class="absolute inset-0 w-full h-full object-cover transition-opacity duration-700"
        style="opacity: 0;"
        oncanplay="this.style.opacity = '1'"
        onended="this.style.opacity = '0'; setTimeout(() => { this.currentTime = 0; this.play(); this.style.opacity = '1' }, 700);"
      >
        <source src="/videos/samaya.webm" type="video/webm" />
        <source src="/videos/samaya.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>

      <!-- Overlay for better text visibility -->
      <div class="absolute inset-0 bg-black/20"></div>

      <!-- Text Overlay -->
      <div
        class="absolute inset-0 flex flex-col items-center justify-center text-white text-center px-4"
      >
        <h1
          id="hero-text"
          class="hero-title opacity-0 translate-y-5 motion-safe:transition-all motion-safe:duration-700 motion-safe:ease-out motion-safe:delay-200 text-3xl sm:text-4xl md:text-5xl lg:text-6xl w-full max-w-4xl mb-4"
        >
          Acupuncture & Traditional Chinese Medicine
        </h1>
        <p
          id="hero-subtext"
          class="hero-title opacity-0 translate-y-5 motion-safe:transition-all text-brand-accent motion-safe:duration-700 motion-safe:ease-out motion-safe:delay-300 text-xl sm:text-2xl md:text-3xl w-full max-w-3xl"
          style="font-weight: 300;"
        >
          Restoring balance, relieving pain, and supporting your body’s natural
          healing.
        </p>
      </div>
    </div>
  </div>

  <div
    class="max-w-7xl mx-auto md:flex md:items-start md:gap-8 text-lg md:mt-4 mt-2 md:mb-3 text-left"
  >
    <!-- Image Section -->
    <div class="md:w-1/2 w-full mb-4 md:mb-0">
      <div
        class="w-full aspect-[4/3] bg-gray-200 flex items-center justify-center rounded-lg shadow-md"
      >
        <span class="text-gray-500 text-sm">Photo Placeholder</span>
      </div>
      <p class="text-sm text-gray-600 mt-2 italic">Caption here...</p>
    </div>

    <!-- Text Section -->
    <div class="md:w-1/2 w-full">
      <p class="mb-4 text-lg md:text-xl">
        Welcome to Wellness Medical Center — a women-owned, community-rooted
        clinic in Santa Cruz, CA that has been providing integrative,
        patient-centered care for over 40 years. Our team of experienced
        practitioners blends the wisdom of traditional healing with
        evidence-based approaches to support whole-body wellness across every
        stage of life. Whether you're seeking acupuncture, herbal medicine,
        nutritional support, or holistic care for women’s health, fertility, or
        family medicine, we’re here to walk alongside you on your health journey
        with compassion and expertise.
      </p>
    </div>
  </div>
  <div class="flex justify-center mt-4">
    <a
      href="https://us.fullscript.com/welcome/wellness-medical-center?utm_medium=webreferral&utm_source=other&utm_campaign=abmwebbuttons_light_500x500.svg&signup_source=website_buttons"
      target="_top"
    >
      <img
        src="https://assets.fullscript.com/buttons/light_500x500.svg"
        alt="Order supplements through my Fullscript store."
      />
    </a>
  </div>

  <!-- Trigger animation on load -->
  <script is:inline>
    window.addEventListener("DOMContentLoaded", () => {
      setTimeout(() => {
        const heroText = document.getElementById("hero-text");
        const heroSubtext = document.getElementById("hero-subtext");
        if (heroText) heroText.classList.remove("opacity-0", "translate-y-5");
        if (heroSubtext)
          heroSubtext.classList.remove("opacity-0", "translate-y-5");
      }, 500);
    });
  </script>
</Layout>
