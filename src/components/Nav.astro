---
const { currentPage } = Astro.props;

const navItems = [
  { name: "Home", href: "/" },
  // { name: "About", href: "/about/" },
  { name: "Services", href: "/services/" },
  { name: "Contact", href: "/contact/" },
];
---

<nav
  class="md:flex items-center justify-between text-text-dark md:pt-4 pt-0 pb-3 md:pb-5 md:px-6 7xl:px-0"
>
  <!-- Logo and Title -->
  <a
    href="/"
    class="flex justify-center md:justify-start items-center space-x-4"
  >
    <img src="/logo2.svg" alt="logo" class="w-14 h-14 text-brand-primary" />
    <h1 class="text-xl sm:text-2xl font-semibold text-brand-accent">
      Wellness Medical Center
    </h1>
  </a>

  <!-- Navigation Links -->
  <div
    class="flex justify-center md:justify-end space-x-6 md:space-x-12 sm:text-lg md:text-xl 7xl:px-0 text-brand-secondary"
  >
    {
      navItems.map(({ name, href }) => {
        const isActive =
          currentPage === href || (currentPage === "" && href === "/"); // Handle Home page case
        return (
          <a
            href={href}
            class={`pb-1 pt-1 md:pt-0 ${
              isActive
                ? "font-bold text-brand-accent border-b-2 border-brand-accent"
                : "hover:text-[#cc926a]"
            }`}
          >
            {name}
          </a>
        );
      })
    }
  </div>
</nav>
