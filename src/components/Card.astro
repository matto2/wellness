---
import { Image } from "astro:assets";
const { img, alt, title, text } = Astro.props;
---

<div class="flex flex-col items-start mb-4">
  <Image src={img} alt={alt} class="w-full h-96 object-cover rounded-t-3xl" />
  <p class="text-xl font-bold mt-4 text-text-dark">{title}</p>
  <p class="text-text-medium mt-2">{text}</p>
</div>
